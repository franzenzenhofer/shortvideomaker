{
  "name": "shortvideomaker",
  "version": "1.1.0",
  "description": "Professional mobile-first short video maker for music videos - loops video to audio length with seamless transitions",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:worker\"",
    "dev:vite": "vite",
    "dev:worker": "wrangler dev --local",
    "prebuild": "npm run lint && npm run typecheck",
    "build": "vite build && npm run build:worker",
    "build:worker": "echo 'Worker uses static assets from dist/'",
    "predeploy": "npm run version:bump:minor && npm run build",
    "deploy": "node scripts/deploy-complete.js",
    "deploy:preview": "wrangler deploy --env preview",
    "tail": "wrangler tail",
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:post-deploy": "node scripts/post-deploy-tests.js",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "version:bump:patch": "node scripts/version-bump.js patch",
    "version:bump:minor": "node scripts/version-bump.js minor",
    "version:bump:major": "node scripts/version-bump.js major",
    "precommit": "npm run lint && npm run typecheck && npm run version:bump:patch"
  },
  "dependencies": {
    "framer-motion": "^12.23.7",
    "itty-router": "^4.0.23",
    "lucide-react": "^0.525.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240117.0",
    "@playwright/test": "^1.41.0",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.7.0",
    "@vitest/coverage-v8": "^1.6.1",
    "@vitest/ui": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.41.0",
    "postcss": "^8.5.6",
    "prettier": "^3.2.4",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.3",
    "vite": "^5.0.11",
    "vitest": "^1.2.0",
    "wrangler": "^3.24.0"
  },
  "engines": {
    "node": ">=18"
  }
}
